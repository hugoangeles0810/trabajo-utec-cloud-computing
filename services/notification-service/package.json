{
  "name": "@gamarriando/notification-service",
  "version": "1.0.0",
  "description": "Notification microservice for Gamarriando marketplace",
  "main": "main.py",
  "scripts": {
    "dev": "python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8004",
    "build": "echo 'Building notification service...'",
    "test": "pytest",
    "lint": "flake8 app/",
    "format": "black app/",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "migrate": "python app/db_migrations.py migrate",
    "migrate:create": "python app/db_migrations.py create",
    "migrate:reset": "python app/db_migrations.py reset"
  },
  "dependencies": {
    "@gamarriando/shared-types": "workspace:*"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-python-requirements": "^6.0.0"
  },
  "keywords": [
    "notification",
    "email",
    "sms",
    "push",
    "microservice",
    "fastapi",
    "aws",
    "lambda"
  ],
  "author": "Gamarriando Team",
  "license": "MIT"
}
